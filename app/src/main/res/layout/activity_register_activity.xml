<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register_activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="User Registration"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
       android:id="@+id/txt_user_reg"
        android:textSize="25sp"/>


    <ImageView
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@drawable/ic_user_register"
    android:tint="@color/colorPrimary"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/txt_user_reg"
android:id="@+id/user_reg_ic"

    />




    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/user_reg_ic">


        <EditText
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:hint="Name"
            android:background="@drawable/edittext_style"
            android:layout_margin="3dp"/>

        <EditText
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:hint="Email"
            android:layout_margin="3dp"
            android:background="@drawable/edittext_style"/>



        <EditText
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:hint="Number"
             android:layout_margin="3dp"
            android:background="@drawable/edittext_style"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="50dp"

           >

           <Button
               style="@style/Widget.AppCompat.Button.Borderless"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="3dp"
               android:layout_marginBottom="3dp"
               android:layout_marginLeft="3dp"
               android:layout_weight="50"
               android:background="@drawable/male_btn"
               android:text="male"
               android:id="@+id/male_btn"
               android:textColor="@color/male" />
           <Button
               style="@style/Widget.AppCompat.Button.Borderless"
               android:layout_width="wrap_content"
               android:background="@drawable/female_btn"
               android:textColor="@color/female"
               android:layout_height="wrap_content"
               android:text="Female"
               android:layout_marginTop="3dp"
               android:layout_marginBottom="3dp"
               android:layout_marginRight="3dp"
android:id="@+id/female_btn"
               android:layout_weight="50"/>

       </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/btn_ripple"

            android:text="Sign up"
            android:textColor="@color/white"

            />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account ?"
        android:id="@+id/txt3"
        android:layout_above="@+id/login_txtView"
        android:layout_centerHorizontal="true"
        android:padding="0dp"
        android:textSize="15sp"
        />

    <Button
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:layout_marginBottom="10dp"
        android:text="Log in."
        android:id="@+id/login_txtView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"

        />



</RelativeLayout>